{% extends "core/templates/manialink.xml.twig" %}

{% block body %}
	<frame pos="0 50" id="infoWindow" >
        <label textsize="15" halign="center" class="text" text="$FB0" pos="0 -1"/>
        <label textsize="4" class="text" text="$FB0OpenPlanet Detected" halign="center" pos="0 -18"/>
        <label class="text" text="OpenPlanet has been restricted on this server." halign="center" pos="0 -24"/>
        {% if data.signature %}
            <label class="text" text="Choose the allowed signature mode:" halign="center" pos="0 -32" />
            <label class="text" textcolor="99ddff" text='{{ data['signature'] }}' halign="center" pos="0 -36" />
        {% else %}
            <label class="text" text="Please disable OpenPlanet." halign="center" pos="0 -32" />
        {% endif %}

        <quad bgcolor="ffffff" size="125 22" pos="0 -45" halign="center" z-index="1" />
        <quad bgcolor="5C5F76" size="124.8 21.8" pos="0 -45.1" halign="center" z-index="2"/>
        {% if data.signature is defined %}
        <label class="text" textsize="2" text="How do I switch signature mode?" halign="center" pos="0 -47" z-index="3" />
        <label class="text" text="In the Openplanet menu click $9dfDeveloper$g then $9dfSignature Mode$g." halign="center" size="110 14" pos="0 -53" autonewline="1" maxline="3"  z-index="3" />
        {% else %}
        <label class="text" textsize="2" text="How do I disable OpenPlanet?" halign="center" pos="0 -47"  z-index="3" />
        <label class="text" text="Close the game. Hold $9dfPAUSE$fff and then start the game, keep holding $9dfPAUSE$g. When you see $cccPlease wait ..$fff or the $cccblack warning screen$fff, release $9dfPAUSE$fff." halign="center" size="110 14" pos="0 -53" autonewline="1" maxline="3"  z-index="3" />
        {% endif %}

        <label class="text" textprefix="$iYou will be automatically kicked in " text="-- seconds" halign="center" pos="0 -73" id="countdownText"/>

        <label text=" Disconnect Now" pos="0 -82 1" size="44 6" id="btnDisconnect" scriptevents="1" halign="center" valign="center2" focusareacolor1="{{colors.button_bg}}" focusareacolor2="{{colors.button_bg_hover}}" />
        <entry id="entry" name="response" value="" pos="900 900" />
        <quad bgcolor="{{ colors.window_bg }}e" size="150 100" pos="0 -45 0" halign="center" valign="center" z-index="-1"/>
</frame>
<script><!--
{% include 'detector.Script.txt' %}
--></script>
{% endblock %}
