{% extends "core/templates/widget.xml.twig" %}

{% block content %}
   <frame pos="0 0" z-index="1" halign="left" valign="top">
        <frame id="quickButtons" pos="0 0" z-index="5">
        {% for category in data.categories %}
            {% if data.activeCategory == category %}
                <frame id="button_{{loop.index0}}" pos="0 -{{loop.index0 * 5}}">
                    <label pos="0 0" z-index="2" size="20 4" textsize="1" halign="center" valign="center" text="{{category}}" textcolor="{{colors.title_bg}}" textfont="GameFontSemiBold"/>
                    <quad pos="0 0" z-index="1" size="20 4" halign="center" valign="center" bgcolor="fffa" />
                </frame>
            {% else %}
                <frame id="button_{{loop.index0}}" pos="0 -{{loop.index0 * 5}}">
                    <label pos="0 0" z-index="2" size="20 4" textsize="1" halign="center" valign="center" text="{{category}}" textcolor="fff" textfont="GameFontSemiBold"/>
                    <label pos="0 0" z-index="1" size="20 4" text=" " halign="center" valign="center" focusareacolor1="{{colors.title_bg}}" focusareacolor2="{{colors.title_bg_light}}" action="{{ actions['cat_' ~ category] }}"/>
                </frame>
            {% endif %}
        {% endfor %}
        <quad pos="-10 2" z-index="-2" size="20 50" bgcolor="{{colors.widget_bg}}7"  halign="left" valign="top" />
        <quad pos="-10 2" z-index="-2" size="57 50" bgcolor="{{colors.widget_bg}}7"  halign="left" valign="top" />
        </frame>

        <frame id="items" pos="11 0" z-index="2">
            <frame id="content" pos="0 0">
                <!-- <label pos="0 0" class="text" text="{{data.activeCategory}}" /> -->
                    {% for item in data.items %}
                            <frame pos="0 -{{ loop.index0 * 3.5 }}">
                                <label pos="2 0" z-index="1" size="35 3" halign="left" valign="center2" text="{{item.title}}" textcolor="fff" textsize="1" textfont="GameFontSemiBold"/>
                                <label pos="0 0" z-index="0" size="35 3" text=" " halign="left" valign="center2" focusareacolor1="0000" focusareacolor2="3af9" action="{{ actions['item_' ~ item.title] }}" />
                            </frame>
                    {% endfor %}
            </frame>

        </frame>

   </frame>
{% endblock %}
