{% extends "core/templates/widget.twig" %}

{% block content %}
    {% for cpdata in data.checkpoints %}
        {% if data.maxCps > loop.index0 %}
            <frame pos="{{ 34.25 * (loop.index0 % 8) }} -{{ (loop.index0 // 8 ) * 3.5 }}">
                <label pos="2 -2" z-index="1" size="10 3" text="$000{{ loop.index }}" halign="center" valign="center2" textsize="0.5" />
                <quad pos="2 -2" z-index="0" size="3 3" bgcolor="fffa" valign="center" halign="center"/>

                <label pos="4.5 -2" z-index="1" size="19 3" text="${{colors.widget_text}}{{ cpdata.nickname }}" halign="left" textsize="0.9" valign="center2"/>
                <quad pos="3.75 -2" z-index="0" size="20 3" bgcolor="{{colors.widget_bg}}a" valign="center" halign="left"/>

                <label pos="29 -2" z-index="1" size="10 3" text="${{colors.widget_text}}{{ cpdata.prettyTime }}" halign="center" textsize="0.8" valign="center2"/>
                <quad pos="29 -2" z-index="0" size="10 3" bgcolor="{{colors.widget_bg}}a" valign="center" halign="center"/>
            </frame>
        {% endif %}
    {% endfor %}
{% endblock %}
