{% extends "core/templates/widget.xml.twig" %}

{% block content %}
    <frame pos="1 -1.5">
        <quad pos="5 -3" z-index="2" size="{{ data.width }} 3" bgcolor="FFF" valign="center"/>
        <quad pos="5 -3" z-index="1" size="{{ size.width - 12 }} 3" bgcolor="aaa" valign="center"/>
        <label pos="{{ size.width * 0.5}} -3" z-index="3" size="{{ size.width }} 3" text="{{ data.percentage }}" halign="center" valign="center2" textcolor="000" textsize="1.5"/>
        <label pos="2.5 -3" z-index="4" size="5 3" text="-" halign="center" valign="center2" focusareacolor1="C00" action="{{ actions.dislike }}" focusareacolor2="F00"/>
        <label pos="{{ size.width - 5 }} -3" z-index="4" size="5 3" text="+" halign="center" valign="center" focusareacolor1="0d0" focusareacolor2="0f0" action="{{ actions.like }}"/>
    </frame>
    <quad pos="0 0" z-index="-1" size="{{ size.width }} {{ size.height }}" bgcolor="{{ colors.widget_bg }}9" />
{% endblock %}
