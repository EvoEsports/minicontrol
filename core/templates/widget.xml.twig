<manialink id="{{ id }}" version="3" name="{{ title }}" layer="{{ layer }}">
    {% include "core/templates/style.xml" %}

    <frame pos="{{ pos.x }} {{ pos.y }}" z-index="{{ pos.z | default(1) }}">
        {% if title != "" %}
        <frame pos="0 0" z-index="3">
            <label pos="{{ size.width / 2 }} -2.5" z-index="1" size="{{ size.width }} 5" textsize="0.9" textfont="RobotoCondensed" text="$o{{ title }}" focusareacolor1="0000"
                focusareacolor2="{{colors.highlight}}" textcolor="{{ colors.title_fg }}" halign="center" valign="center2" action="{{ actions['openWidget'] }}"/>
            <quad pos="0 0" z-index="0" size="{{ size.width }} 5" bgcolor="{{ colors.title_bg }}9" halign="left" valign="top"/>
            <quad pos="0 0" z-index="3" size="0.5 5" bgcolor="{{ colors.highlight }}" halign="left" valign="top"/>
        </frame>
        <frame pos="0 -5.5" z-index="1">
        {% else %}
        <frame pos="0 0" z-index="1">
        {% endif %}
            {% block content %}{% endblock %}
        </frame>
    </frame>

    {% if game == "Trackmania" %}
	 <script><!--
	    #Include "TextLib" as TextLib
	    #Include "MathLib" as MathLib
	    #Include "AnimLib" as AnimLib
	    #Include "ColorLib" as ColorLib

	    {% include 'core/templates/scripts.Script.txt' %}

     --></script>

	{% block maniascript %}{% endblock %}

	 <script><!--

	Void _nothing() {
	}

	main() {

	  +++OnInit+++

	  while(True) {
	    yield;
	    if (!PageIsVisible || InputPlayer == Null) {
	  			continue;
	  	}

	    foreach (Event in PendingEvents) {
				switch (Event.Type) {
					case CMlScriptEvent::Type::EntrySubmit: {
						+++EntrySubmit+++
					}
					case CMlScriptEvent::Type::KeyPress: {
						+++OnKeyPress+++
					}
					case CMlScriptEvent::Type::MouseClick: {
						+++OnMouseClick+++
					}
					case CMlScriptEvent::Type::MouseOut: {
						+++OnMouseOut+++
					}
					case CMlScriptEvent::Type::MouseOver: {
						+++OnMouseOver+++
					}
				}
			}

			+++Loop+++
	  }

	}
	--></script>
{% endif %}
</manialink>