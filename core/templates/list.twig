{% extends "core/templates/window.twig" %}

{% block content %}
    <frame pos="0 0" z-index="1">
        {% set totalWidth = 0 %}
        {% set posx = 0 %}
        {% set keyy = "" %}
        {% for column in data.columns %}
            {% set keyy = "title_" ~ loop.index0 %}
            <label pos="{{ posx }} -2" z-index="2" size="{{column.width}} 5" textfont="RobotoCondensedBold" text=" ${{ colors.window_text }}{{ column.title }}" halign="left" textsize="1.5" valign="center2" focusareacolor1="0000" focusareacolor2="{{colors.button_bg_hover}}" action="{{actions[keyy]}}"/>
            <quad pos="{{ posx }} -4.5" z-index="3" size="{{ column.width }} .2" bgcolor="{{ colors.black }}" valign="bottom" />
            {% set posx = (posx + column.width ) %}
            {% set totalWidth = totalWidth + data.columns[loop.index0].width + 1 %}
        {% endfor %}
        {% if data.listActions %}
            <label pos="{{ posx }} -2" z-index="1" size="{{ 14 * data.listActions|length }} 5" textfont="RobotoCondensedBold" text="${{ colors.window_text }}  Actions" halign="left" textsize="1.5" valign="center2" focusareacolor1="0000" />
            <quad pos="{{ posx }} -4.5" z-index="0" size="{{ 14 * data.listActions|length }} 0.2" bgcolor="{{ colors.black }}" valign="bottom"/> -->
            {% set totalWidth = totalWidth + 14 * data.listActions|length %}
        {% endif %}
        <!-- <quad pos="-2 -4" z-index="0" size="{{ totalWidth }} 0.2" bgcolor="eee" valign="center2"/> -->
    </frame>
    {% for item in data.items.items %}
        <frame pos="0 -{{ loop.index * 5 }}" z-index="1">
                {% set posx = 0 %}
                    {% for column in data.columns %}
                        {% if column.type == "entry" %}
                            <entry pos="{{ posx }} -2" z-index="3" size="{{column.width}} 5" default="{{ item[column.key] }}" name="{{column.key}}_{{item.index}}" halign="left" textsize="1.5" focusareacolor1="0000" focusareacolor2="0000" valign="center2"/>
                        {% else %}
                            {%  if column.action is defined %}
                                {% set key = "item_" ~ column.action ~ "_" ~ item.index %}
                                <label pos="{{ posx }} -2" z-index="1" size="{{column.width}} 5" textfont="RobotoCondensed" text="${{ colors.window_text }} {{ item[column.key] }}" halign="left" textsize="1.5" valign="center2" focusareacolor1="0000" focusareacolor2="{{colors.button_bg_hover}}" action="{{ actions[key] }}"/>
                            {% else %}
                                <label pos="{{ posx }} -2" z-index="1" size="{{column.width}} 5" textfont="RobotoCondensed" text="${{ colors.window_text }} {{ item[column.key] }}" halign="left" textsize="1.5" valign="center2"/>
                            {% endif %}
                        {% endif %}
                        {% if (item.index % 2) == 0 %}
                            <quad pos="{{ posx }} -2" z-index="0" size="{{ column.width }} 5" bgcolor="{{colors.window_bg}}9" valign="center2"/>
                        {% else %}
                            <quad pos="{{ posx }} -2" z-index="0" size="{{ column.width }} 5" bgcolor="{{colors.window_bg_dark}}9" valign="center2"/>
                        {% endif %}
                        {% set posx = (posx + column.width ) %}
                {% endfor %}

                {% for action in data.listActions %}
                        {% set key = "item_" ~ action ~ "_" ~ item.index %}
                        <label pos="{{ posx + 6.5 }} -2" z-index="1" size="12 4"
                        text="${{ colors.window_text }}{{action}}" textsize="1"
                        valign="center2" halign="center"
                        textfont="RobotoCondensed"
                        focusareacolor1="{{colors.button_bg}}" focusareacolor2="{{colors.button_bg_hover}}" textcolor="{{colors.button_text}}"
                        action="{{ actions[key] }}" />
                        {% set posx = (posx + 13) %}
                {% endfor %}

        </frame>
    {% endfor %}

    <frame pos="{{ (size.width / 2) -17}} -{{ size.height - 12}}">
            <quad pos="-3 -2.5" z-index="1" size="6 6" style="Icons64x64_1" substyle="ArrowFirst"  halign="center" valign="center" action="{{actions.pg_start}}" />
            <quad pos="3 -2.5" z-index="1" size="6 6" style="Icons64x64_1" substyle="ArrowPrev"  halign="center" valign="center" action="{{actions.pg_prev}}" />
            <label pos="12 -2.5" z-index="1" size="6 6" text="${{ colors.window_text }}$o{{ data.items.currentPage + 1 }}/{{ data.items.totalPages }}" halign="center" textsize="1" valign="center2"/>
            <quad pos="22 -2.5" z-index="1" size="6 6" style="Icons64x64_1" substyle="ArrowNext" halign="center"  valign="center" action="{{actions.pg_next}}" />
            <quad pos="28 -2.5" z-index="1" size="6 6" style="Icons64x64_1" substyle="ArrowLast"  halign="center" valign="center" action="{{actions.pg_end}}"/>
    </frame>

    {% if actions.apply is defined %}
    <frame  pos="{{ (size.width) -6}} -{{ size.height - 7}}" z-index="2">
        <label pos="-21 0" z-index="1" size="12 5" text="Apply" textsize="1.2" valign="center2" halign="center" focusareacolor1="{{colors.button_bg}}" focusareacolor2="{{colors.button_bg_hover}}" textcolor="{{colors.button_text}}" action="{{ actions.apply }}" />
        <label pos="-7 0" z-index="1" size="12 5" text="Cancel" textsize="1.2" valign="center2" halign="center" focusareacolor1="{{colors.button_bg}}" focusareacolor2="{{colors.button_bg_hover}}" textcolor="{{colors.button_text}}" action="{{ actions.close }}" />
    </frame>
    {% endif %}
{% endblock %}
