{% extends "core/templates/window.xml.twig" %}

{% block content %}
	<label text="{{ data.question }}" size="{{ size.width }} 18" textsize="2" autonewline="1" />
	<frame pos="{{ (size.width) - 9 }} -{{ size.height - 11 }}" z-index="1">
	    <Button pos="-21 0" z-index="1" size="12 5" text="Apply" textsize="1.2" textfont="RobotoCondensedBold" valign="center2" halign="center" focusareacolor1="{{ colors.button_bg }}" focusareacolor2="{{ colors.button_bg_hover }}" textcolor="{{ colors.button_text }}" action="{{ actions.apply }}"/>
	    <Button pos="-7 0" z-index="1" size="12 5" text="Cancel" textsize="1.2" textfont="RobotoCondensedBold" valign="center2" halign="center" focusareacolor1="{{ colors.button_bg }}" focusareacolor2="{{ colors.button_bg_hover }}" textcolor="{{ colors.button_text }}" action="{{ actions.close }}"/>
    </frame>
{% endblock %}
