{
    "linter": {
        "rules": {
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "useLiteralKeys": "off"
            }
        }
    },
    "files": {
        "include": [
            "core/**/*.ts",
            "userdata/plugins/**/*.ts"
        ],
        "ignore": [
            "test",
            "node_modules"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "attributePosition": "auto",
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 150,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 150,
            "lineEnding": "lf",
            "quoteStyle": "single"
        }
    }
}