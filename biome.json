{
    "linter": {
        "rules": {
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "useLiteralKeys": "off"
            }
        }
    },
    "files": {
        "includes": [
            "**/core/**/*.ts",
            "**/userdata/plugins/**/*.ts",
            "!**/test",
            "!**/node_modules"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "includes": [
            "**"
        ],
        "attributePosition": "auto",
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 150,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 150,
            "lineEnding": "lf",
            "quoteStyle": "double"
        }
    }
}